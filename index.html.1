      }
    }

    function renderizarSelectorMes() {
      const container = document.getElementById('month-selector');
      container.innerHTML = MESES.map(m => 
        `<button class="month-btn ${m.value === mesAtivo ? 'active' : ''}" 
                data-mes="${m.value}">${m.label}</button>`
      ).join('');

      container.querySelectorAll('.month-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.month-btn').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          mesAtivo = btn.dataset.mes;
          if (usuarioLogado) carregarDashboard();
        });
      });
    }

    function renderizarDashboard(dados) {
      const container = document.getElementById('dashboard-metrics');
      container.innerHTML = `
        <div class="metric-card">
