          <div class="metric-value break">${dados.quebras}</div>
          <div style="font-size:0.9rem; color:var(--gray); margin-top:6px;">
            ${formatarMoeda(dados.valor_quebras)}
          </div>
        </div>
        <div class="metric-card">
          <div class="metric-label"><i class="fas fa-undo"></i> Devolu√ß√µes</div>
          <div class="metric-value money">${formatarMoeda(dados.devolucoes)}</div>
        </div>
        <div class="metric-card">
          <div class="metric-label"><i class="fas fa-route"></i> Rotas Realizadas</div>
          <div class="metric-value">${dados.rotas}</div>
        </div>
        <div class="metric-card">
          <div class="metric-label"><i class="fas fa-bed"></i> Rotas com Pernoite</div>
          <div class="metric-value">${dados.pernoites}</div>
          <div style="font-size:0.9rem; color:var(--gray); margin-top:6px;">
            ${dados.rotas ? ((dados.pernoites / dados.rotas) * 100).toFixed(0) : '0'}% das rotas
          </div>
        </div>
      `;
    }

    function carregarDashboard() {
      const loading = document.getElementById('dashboard-loading');
      const error = document.getElementById('dashboard-error');
      const metrics = document.getElementById('dashboard-metrics');
      const btnEditar = document.getElementById('btn-editar-mes');

      loading.style.display = 'block';
      error.style.display = 'none';
      metrics.style.display = 'none';
      btnEditar.style.display = 'none';

      try {
        let dados = null;
        let nomeExibicao = usuarioLogado;

        if (perfil === 'moderador') {
          const motorista = document.getElementById('cadastro-motorista-nome')?.dataset?.motorista || 'ANANIAS';
          nomeExibicao = NOMES_COMPLETOS[motorista] || motorista;
          dados = dadosDesempenho[motorista]?.[mesAtivo] || null;
        } else {
          nomeExibicao = NOMES_COMPLETOS[usuarioLogado] || usuarioLogado;
          dados = dadosDesempenho[usuarioLogado]?.[mesAtivo] || null;
        }

        document.getElementById('user-display').textContent = nomeExibicao;
        document.getElementById('mes-ano-display').textContent = formatarMesAno(mesAtivo);

        if (dados) {
          renderizarDashboard(dados);
          metrics.style.display = 'grid';
          if (perfil === 'moderador') {
            btnEditar.style.display = 'inline-block';
          }
        } else {
          metrics.innerHTML = `
            <div class="metric-card" style="grid-column: 1 / -1; background:rgba(30,30,50,0.7);">
              <div style="font-size:1.3rem; color:var(--gray); margin-bottom:15px;">
                <i class="fas fa-exclamation-circle"></i> Nenhum dado cadastrado para ${formatarMesAno(mesAtivo)}
              </div>
              ${perfil === 'moderador' ? 
                `<button class="btn" onclick="abrirCadastro('${usuarioLogado || 'ANANIAS'}', '${mesAtivo}')">
                  <i class="fas fa-plus"></i> Cadastrar Agora
                </button>` : 
                `<p style="color:var(--gray);">Aguarde o moderador inserir seus dados.</p>`
              }
            </div>
          `;
          metrics.style.display = 'grid';
        }
      } catch (err) {
        error.textContent = 'Erro ao carregar dados.';
        error.style.display = 'block';
        console.error(err);
      } finally {
        loading.style.display = 'none';
      }
    }

    function carregarHistorico() {
      const loading = document.getElementById('historico-loading');
      const error = document.getElementById('historico-error');
      const body = document.getElementById('historico-body');

      loading.style.display = 'block';
      error.style.display = 'none';
      body.innerHTML = '';

      try {
        const dadosMotorista = dadosDesempenho[usuarioLogado] || {};
        const mesesComDados = Object.keys(dadosMotorista)
          .map(mes => ({ mes, ...dadosMotorista[mes] }))
          .sort((a, b) => b.mes.localeCompare(a.mes)); // mais recente primeiro

        if (mesesComDados.length === 0) {
          body.innerHTML = `
            <tr>
              <td colspan="6" style="text-align:center; color:var(--gray);">
                Nenhum registro encontrado.
              </td>
            </tr>
          `;
        } else {
          body.innerHTML = mesesComDados.map(item => `
            <tr>
              <td><strong>${formatarMesAno(item.mes)}</strong></td>
              <td class="percent">${item.taxa_entrega.toFixed(1)}%</td>
              <td>${item.velocidade.toFixed(1)} km/h</td>
              <td class="break">${item.quebras} (${formatarMoeda(item.valor_quebras)})</td>
              <td class="money">${formatarMoeda(item.devolucoes)}</td>
              <td>
                ${perfil === 'moderador' ? 
                  `<button class="btn btn-outline" style="padding:6px 10px; font-size:0.85rem;" 
                          onclick="abrirCadastro('${usuarioLogado}', '${item.mes}')">
                     <i class="fas fa-edit"></i> Editar
                   </button>` : 
                  `<span style="color:var(--gray);">‚Äî</span>`
                }
              </td>
            </tr>
          `).join('');
        }
      } catch (err) {
        error.textContent = 'Erro ao carregar hist√≥rico.';
        error.style.display = 'block';
        console.error(err);
      } finally {
        loading.style.display = 'none';
      }
    }

    function abrirCadastro(motorista, mes) {
      const modal = document.getElementById('cadastroModal');
      const nomeCompleto = NOMES_COMPLETOS[motorista] || motorista;
      
      document.getElementById('cadastro-motorista-nome').textContent = nomeCompleto;
      document.getElementById('cadastro-motorista-nome').dataset.motorista = motorista;
      document.getElementById('cadastro-mes').textContent = formatarMesAno(mes);
      document.getElementById('cadastro-mes').dataset.mes = mes;

      // Preenche formul√°rio se j√° houver dados
      const dados = dadosDesempenho[motorista]?.[mes];
      if (dados) {
        document.getElementById('taxa-entrega').value = dados.taxa_entrega;
        document.getElementById('velocidade').value = dados.velocidade;
        document.getElementById('quebras').value = dados.quebras;
        document.getElementById('valor-quebras').value = dados.valor_quebras;
        document.getElementById('devolucoes').value = dados.devolucoes;
        document.getElementById('rotas').value = dados.rotas;
        document.getElementById('pernoites').value = dados.pernoites;
        document.getElementById('observacoes').value = dados.observacoes || '';
      } else {
        document.getElementById('cadastro-form').reset();
      }

      // Atualiza barra de progresso
      const inputTaxa = document.getElementById('taxa-entrega');
      const bar = document.getElementById('taxa-bar');
      inputTaxa.addEventListener('input', () => {
        const val = Math.min(100, Math.max(0, parseFloat(inputTaxa.value) || 0));
        bar.style.width = val + '%';
      });
      if (dados) bar.style.width = dados.taxa_entrega + '%';

      modal.style.display = 'flex';
    }

    // ===================================================
    // üö™ LOGIN
    // ===================================================
    document.getElementById('switch-to-motorista').addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('login-moderador').style.display = 'none';
      document.getElementById('login-motorista').style.display = 'block';
      document.getElementById('login-error').style.display = 'none';
    });

    document.getElementById('switch-to-moderador').addEventListener('click', (e) => {
      e.preventDefault();
      document.getElementById('login-motorista').style.display = 'none';
      document.getElementById('login-moderador').style.display = 'block';
      document.getElementById('login-error').style.display = 'none';
    });

    document.getElementById('login-submit').addEventListener('click', () => {
      const user = document.getElementById('login-user').value.trim();
      const pass = document.getElementById('login-pass').value;

      const loading = document.getElementById('login-loading');
      const error = document.getElementById('login-error');

      if (!user || !pass) {
        error.textContent = 'Preencha usu√°rio e senha.';
        error.style.display = 'block';
        return;
      }

      loading.style.display = 'block';
      error.style.display = 'none';

      setTimeout(() => {
        if (user === MODERADOR_USER && pass === MODERADOR_PASS) {
          usuarioLogado = user;
          perfil = 'moderador';
          document.getElementById('loginModal').style.display = 'none';
          document.getElementById('main-content').style.display = 'block';
          atualizarBadgePerfil();
          document.getElementById('btn-cadastro').style.display = 'block';
          document.getElementById('cadastro-motorista-nome').dataset.motorista = 'ANANIAS';
          renderizarSelectorMes();
          carregarDashboard();
        } else {
          error.textContent = 'Usu√°rio ou senha incorretos.';
          error.style.display = 'block';
        }
        loading.style.display = 'none';
      }, 400);
    });

    document.getElementById('motorista-submit').addEventListener('click', () => {
      const user = document.getElementById('motorista-user').value.trim().toUpperCase();
      const pass = document.getElementById('motorista-pass').value;

      const error = document.getElementById('login-error');

      if (!user || !pass) {
        error.textContent = 'Preencha usu√°rio e senha.';
        error.style.display = 'block';
        return;
      }

      if (SENHAS_MOTORISTAS[user] && SENHAS_MOTORISTAS[user] === pass) {
        usuarioLogado = user;
        perfil = 'motorista';
        document.getElementById('loginModal').style.display = 'none';
        document.getElementById('main-content').style.display = 'block';
        atualizarBadgePerfil();
        renderizarSelectorMes();
        carregarDashboard();
      } else {
        error.textContent = 'Usu√°rio ou senha inv√°lidos.';
        error.style.display = 'block';
      }
    });

    // ===================================================
    // üìù CADASTRO
    // ===================================================
    document.getElementById('cadastro-form').addEventListener('submit', (e) => {
      e.preventDefault();

      const motorista = document.getElementById('cadastro-motorista-nome').dataset.motorista;
      const mes = document.getElementById('cadastro-mes').dataset.mes;

      const campos = {
        taxa_entrega: parseFloat(document.getElementById('taxa-entrega').value),
        velocidade: parseFloat(document.getElementById('velocidade').value),
        quebras: parseInt(document.getElementById('quebras').value),
        valor_quebras: parseFloat(document.getElementById('valor-quebras').value),
        devolucoes: parseFloat(document.getElementById('devolucoes').value),
        rotas: parseInt(document.getElementById('rotas').value),
        pernoites: parseInt(document.getElementById('pernoites').value),
        observacoes: document.getElementById('observacoes').value.trim()
      };

      // Valida√ß√£o
      if (isNaN(campos.taxa_entrega) || campos.taxa_entrega < 0 || campos.taxa_entrega > 100) {
        document.getElementById('cadastro-error').textContent = 'Taxa de entrega deve estar entre 0 e 100.';
        document.getElementById('cadastro-error').style.display = 'block';
        return;
      }

      // Garante inicializa√ß√£o
      if (!dadosDesempenho[motorista]) dadosDesempenho[motorista] = {};
      dadosDesempenho[motorista][mes] = {
        ...campos,
        data_registro: new Date().toISOString()
      };

      salvarDados();

      document.getElementById('cadastro-success').textContent = '‚úÖ Desempenho salvo com sucesso!';
      document.getElementById('cadastro-success').style.display = 'block';
      document.getElementById('cadastro-error').style.display = 'none';

      setTimeout(() => {
        document.getElementById('cadastroModal').style.display = 'none';
        if (perfil === 'moderador') {
          document.getElementById('cadastro-motorista-nome').dataset.motorista = motorista;
        }
        carregarDashboard();
        carregarHistorico();
      }, 1200);
    });

    // ===================================================
    // üîÅ NAVEGA√á√ÉO
    // ===================================================
    document.querySelectorAll('.tab-btn:not(#btn-cadastro)').forEach(btn => {
      btn.addEventListener('click', () => {
        document.querySelectorAll('.tab-btn').forEach(b => b.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(c => c.classList.remove('active'));
        
        const tabId = btn.dataset.tab;
        btn.classList.add('active');
        document.getElementById(tabId).classList.add('active');

        if (tabId === 'historico' && usuarioLogado) {
          carregarHistorico();
        }
      });
    });

    document.getElementById('btn-editar-mes').addEventListener('click', () => {
      const motorista = perfil === 'moderador' 
        ? (document.getElementById('cadastro-motorista-nome')?.dataset?.motorista || 'ANANIAS')
        : usuarioLogado;
      abrirCadastro(motorista, mesAtivo);
    });

    document.getElementById('btn-cadastro').addEventListener('click', () => {
      const motorista = document.getElementById('cadastro-motorista-nome')?.dataset?.motorista || 'ANANIAS';
      abrirCadastro(motorista, mesAtivo);
    });

    // Fecha modais ao clicar fora
    window.addEventListener('click', (e) => {
      if (e.target.classList.contains('modal')) {
        e.target.style.display = 'none';
      }
    });
  </script>

</body>
</html>
